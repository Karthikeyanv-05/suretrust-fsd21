{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",  
        "use": "@vercel/static-build",  
        "config": {
          "distDir": "client/dist"  
        }
      },
      {
        "src": "server/package.json",  
        "use": "@vercel/node",        
        "config": {
          "maxDuration": 10            
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",               
        "dest": "/client/$1"
      },
      {
        "src": "/server/(.*)",         
        "dest": "/server/api/$1"
      }
    ]
  }
  